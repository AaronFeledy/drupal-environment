{
    "name": "davereid/drupal-environment",
    "description": "Provides a helper for working with environment variables and Drupal hosting providers.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "Drupal",
        "Acquia",
        "Pantheon",
        "Tugboat",
        "Environment"
    ],
    "authors": [
        {
            "name": "Dave Reid",
            "email": "dave@davereid.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1.10",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "roave/security-advisories": "dev-master",
        "symfony/phpunit-bridge": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Davereid\\DrupalEnvironment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Davereid\\DrupalEnvironment\\Tests\\": "tests/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "scripts": {
        "test": [
            "@phpstan",
            "@phpunit"
        ],
        "phpstan": "vendor/bin/phpstan analyse src tests --level 5",
        "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit tests/src --verbose --coverage-text"
    },
    "config": {
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
