{
    "name": "davereid/drupal-environment",
    "description": "Provides a helper for working with environment variables and Drupal hosting providers.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "Drupal",
        "Acquia",
        "Pantheon",
        "Tugboat",
        "Environment"
    ],
    "authors": [
        {
            "name": "Dave Reid",
            "email": "dave@davereid.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "phpstan/phpstan": "^1.10",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Davereid\\DrupalEnvironment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Davereid\\DrupalEnvironment\\Tests\\": "tests/src/"
        }
    },
    "scripts": {
        "check": [
            "vendor/bin/phpstan analyse src tests"
        ],
        "fix": [
            "vendor/bin/php-cs-fixer fix -v"
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
